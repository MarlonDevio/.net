<UserControl
    x:Class="BudgetTracker.Components.MenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BudgetTracker.Components"
    mc:Ignorable="d">
    <TextBlock
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Text="{Binding MenuItemText, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White"  Margin="10, 0"
        MouseDown="TextBlock_MouseDown" />
    

</UserControl>
